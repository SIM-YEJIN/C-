#include <iostream>
using namespace std;

int main5() {
	int lucky_number = 3;
	cout << "내 숫자를 맞춰봐" << endl;

	int user_input;
	
	while (1) {
		cout << "입력: ";
		cin >> user_input;
		if (lucky_number == user_input) {
			cout << "축하합니다!" << endl;
			break;
		}
		else {
			cout << "다시 생각해보세요." << endl;
		}
	}
	return 0;
}

int main6() {
	int user_input;
	cout << "인적사항" << endl;
	cout << "1. 이름" << endl;
	cout << "2. 나이" << endl;
	cout << "3. 성별" << endl;
	cin >> user_input;

	switch (user_input)
	{
	case 1:
		cout << "심예진" << endl;
		break;
	case 2:
		cout << "26세" << endl;
		break;
	case 3:
		cout << "여자" << endl;
		break;
	default:
		break;
	}
	return 0;
}
